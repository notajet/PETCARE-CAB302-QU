<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.example.petcarecab302qu.controller.SignupController"
    style="-fx-background-color: #f0f0f0; -fx-padding: 20px">

    <Text text = "Sign Up" style="-fx-font-weight: bold;">
        <font>
            <Font size = "24"/>
        </font>
    </Text>
    <TextField fx:id="firstNameField" promptText="First Name" style="-fx-font-size: 14px;" />
    <TextField fx:id="lastNameField" promptText="Last Name" style="-fx-font-size: 14px;" />
    <TextField fx:id="emailField" promptText="Email" style="-fx-font-size: 14px;" />
    <TextField fx:id="phoneField" promptText="Phone" style="-fx-font-size: 14px;" />
    <PasswordField fx:id="passwordField" promptText="Password" style="-fx-font-size: 14px;" />
    <Button text="Back" onAction="#handleBackButtonOnHome" style="-fx-font-size: 14px; -fx-background-color: #ff6347; -fx-text-fill: white;"/>
    <Button text="Sign Up" onAction="#handleSignUpAction" style="-fx-font-size: 14px; -fx-background-color: #1e90ff; -fx-text-fill: white;" />
    <Text fx:id="errorMessage" style="-fx-text-fill: red;" visible="false"/>
    <Text text = "Already have an account?" style="-fx-text-fill: black;"/>
    <Button text="Log in" onAction="#handleLogin" style="-fx-font-size: 14px; -fx-background-color: #1e90ff; -fx-text-fill: white;"/>
</VBox>
