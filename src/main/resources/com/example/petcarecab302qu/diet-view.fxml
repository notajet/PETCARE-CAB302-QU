<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:id="rootPane" fx:controller="com.example.petcarecab302qu.controller.DietController"
            style="-fx-background-color: white;" prefWidth="1000" prefHeight="600">

    <!-- Main content with the title and Add Diet Plan button, centered and lowered -->
    <VBox alignment="TOP_CENTER" spacing="20.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="50.0"
          style="-fx-background-color: white;  -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-border-color: #dcdcdc; -fx-border-width: 2px;">
        <Text text="Diet Planning Page" style="-fx-font-size: 28px; -fx-font-weight: bold;" />

        <HBox spacing="10" alignment="CENTER">
            <!-- Buttons should go left to right below the title -->
            <VBox fx:id="dietListBox" spacing="10" AnchorPane.leftAnchor="50.0" AnchorPane.topAnchor="150.0"


                  style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-padding: 10px; -fx-border-color: #dcdcdc; -fx-border-width: 2px;">
            </VBox>
            <Button text="Add Diet Plan" onAction="#handleAddDietPlan" prefWidth="200" prefHeight="50"
                    style="-fx-font-size: 18px; -fx-background-color: #1e90ff; -fx-text-fill: white;" />
        </HBox>
    </VBox>

    <!-- Back button at the bottom-left corner -->
    <Button text="Back" onAction="#handleBackButton" prefWidth="200" prefHeight="50"
            style="-fx-font-size: 18px; -fx-background-color: #ff6347; -fx-text-fill: white;"
            AnchorPane.leftAnchor="20.0" AnchorPane.bottomAnchor="20.0" />

</AnchorPane>



