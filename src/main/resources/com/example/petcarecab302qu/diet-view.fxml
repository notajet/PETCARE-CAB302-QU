<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.Button?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:id="rootPane" fx:controller="com.example.petcarecab302qu.controller.DietController"
            style="-fx-background-color: #f0f0f0;">
    <VBox fx:id="dietListBox" spacing="10"/>
    <!-- Static content: Title and Add Diet Plan button, centered -->
    <VBox alignment="TOP_CENTER" spacing="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="100.0" AnchorPane.bottomAnchor="0.0"
          style="-fx-background-color: white; -fx-padding: 40px; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-border-color: #dcdcdc; -fx-border-width: 2px;">

        <Text text="Diet Planning Page" style="-fx-font-size: 28px; -fx-font-weight: bold;" />
        <Button text="Add Diet Plan" onAction="#handleAddDietPlan" prefWidth="200" prefHeight="50"
                style="-fx-font-size: 18px; -fx-background-color: #1e90ff; -fx-text-fill: white;" />
    </VBox>

    <!-- Position the Back button at the bottom-left corner -->
    <Button text="Back" onAction="#handleBackButton" prefWidth="200" prefHeight="50"
            style="-fx-font-size: 18px; -fx-background-color: #ff6347; -fx-text-fill: white;"
            AnchorPane.leftAnchor="20.0" AnchorPane.bottomAnchor="20.0" />

    <!-- Placeholder for dynamic content (e.g., text fields, forms) -->
    <AnchorPane fx:id="dynamicContentPane" AnchorPane.leftAnchor="400.0" AnchorPane.topAnchor="50.0">
        <!-- Dynamically added content will be placed here -->
    </AnchorPane>

</AnchorPane>

