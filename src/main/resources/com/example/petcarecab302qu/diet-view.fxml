<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.Button?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.petcarecab302qu.controller.DietController"
            fx:id="rootPane" style="-fx-background-color: #f0f0f0;">

    <VBox alignment="TOP_LEFT" spacing="30.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"
          AnchorPane.topAnchor="20.0" AnchorPane.bottomAnchor="20.0"
          style="-fx-background-color: white; -fx-padding: 40px; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-border-color: #dcdcdc; -fx-border-width: 2px;">

        <Text text="Working" style="-fx-font-size: 28px; -fx-font-weight: bold;" />

        <Button text="Back" onAction="#handleBackButton" prefWidth="200" prefHeight="50"
                style="-fx-font-size: 18px; -fx-background-color: #ff6347; -fx-text-fill: white;" />

        <Button text="Add Diet Plan" onAction="#handleAddDietPlan" prefWidth="200" prefHeight="50"
                style="-fx-font-size: 18px; -fx-background-color: #1e90ff; -fx-text-fill: white;" />
    </VBox>

</AnchorPane>
