<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.petcarecab302qu.controller.PetprofileController">

    <Button fx:id="backButton" layoutX="10" layoutY="10" mnemonicParsing="false" text="Back"
            onAction="#handleBackButton"
            style="-fx-background-color: lightgrey; -fx-font-size: 14px;"/>

    <Button fx:id="addPetButton" text="Add Pet" onAction="#toggleAddPetForm"
            layoutX="490" layoutY="10"
            style="-fx-background-color: lightgreen; -fx-font-size: 18px;" />

    <!-- Container for Pet List -->
    <ScrollPane layoutX="10" layoutY="60" prefWidth="580" prefHeight="500">
        <VBox fx:id="petsContainer" spacing="15">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
            </padding>
            <!-- Pet list populated here -->
        </VBox>
    </ScrollPane>

    <!-- Add Pet Form  -->
    <VBox fx:id="addPetForm" visible="false" managed="false" alignment="CENTER"
          spacing="15" fillWidth="false" maxWidth="400" layoutX="200" layoutY="100">
        <!-- Form VBox (centered inside addPetForm) -->
        <VBox alignment="CENTER" spacing="15">

            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Label text="Name:" minWidth="100" />
                <TextField fx:id="nameField" promptText="Enter pet name" maxWidth="250" />
            </HBox>

            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Label text="Age:" minWidth="100" />
                <TextField fx:id="ageField" promptText="Enter pet age" maxWidth="250" />
            </HBox>

            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Label text="Gender:" minWidth="100" />
                <TextField fx:id="genderField" promptText="Enter pet gender" maxWidth="250" />
            </HBox>

            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Label text="Breed:" minWidth="100" />
                <TextField fx:id="breedField" promptText="Enter pet breed" maxWidth="250" />
            </HBox>

            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Label text="Weight (kg):" minWidth="100" />
                <TextField fx:id="weightField" promptText="Enter pet weight" maxWidth="250" />
            </HBox>

            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Label text="Height (cm):" minWidth="100" />
                <TextField fx:id="heightField" promptText="Enter pet height" maxWidth="250" />
            </HBox>

            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Label text="Image URL:" minWidth="100" />
                <TextField fx:id="imageUrlField" promptText="Enter image URL" maxWidth="250" />
            </HBox>

            <Button fx:id="savePet" text="Save New Pet" onAction="#savePet"
                    style="-fx-background-color: lightgreen; -fx-font-size: 16px;" />
        </VBox>
    </VBox>
</AnchorPane>
