<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>


<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.ImageView?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>


<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.petcarecab302qu.controller.ScheduleController" prefWidth="800.0" prefHeight="600.0">

    <!-- Header Section -->
    <top>
        <VBox spacing="10.0" alignment="CENTER_LEFT" style="-fx-background-color: #ffc3ac; -fx-padding: 10;" prefHeight="60.0">
            <ImageView fx:id="logoImage" fitHeight="50" fitWidth="150" preserveRatio="true" />
        </VBox>
    </top>

    <!-- Navigation Bar on the Left -->
    <left>
        <VBox fx:id="navigationBar" style="-fx-background-color: #f0f0f0; -fx-padding: 10;" />
    </left>

    <!-- Main Content in the Center -->
    <center>
        <VBox spacing="20" style="-fx-padding: 30;" alignment="TOP_CENTER">
            <!-- Calendar and DatePicker -->
            <Label text="Calendar" style="-fx-font-size: 22px; -fx-font-weight: bold;" />
            <DatePicker fx:id="datePicker" />
            <!-- Label to display selected date -->
            <Label fx:id="selectLabel" text="Selected Day: " textFill="RED" />
            <!-- Calendar Grid for days of the month -->
            <GridPane fx:id="calendarGrid" hgap="10" vgap="10" alignment="CENTER">
                <!-- Calendar header row (days of the week) -->
                <Label text="Sun" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <Label text="Mon" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label text="Tue" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                <Label text="Wed" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                <Label text="Thu" GridPane.columnIndex="4" GridPane.rowIndex="0" />
                <Label text="Fri" GridPane.columnIndex="5" GridPane.rowIndex="0" />
                <Label text="Sat" GridPane.columnIndex="6" GridPane.rowIndex="0" />
            </GridPane>

            <!-- Task List for the Selected Day -->
            <VBox fx:id="todayTaskList" spacing="10" style="-fx-padding: 20; -fx-background-color: #e0e0e0; -fx-border-color: gray;" prefHeight="150">
                <Label text="Today's Tasks:" style="-fx-font-size: 18px;" />
            </VBox>
        </VBox>
    </center>

    <!-- Task Logging Section on the Right -->
    <right>
        <VBox spacing="20" style="-fx-padding: 20; -fx-background-color: #f9f9f9;" alignment="TOP_CENTER">

            <!-- Log Schedule Form -->
            <VBox fx:id="logSchedule" spacing="10" style="-fx-padding: 20; -fx-background-color: #ffffff; -fx-border-color: gray;">
                <Label text="Log Schedule" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                <!-- Event Type Dropdown -->
                <HBox spacing="10">
                    <Label text="Event Type:" style="-fx-font-size: 14px;" />
                    <ComboBox fx:id="eventTypeComboBox" style="-fx-font-size: 14px;">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Eating" />
                                <String fx:value="Walking" />
                                <String fx:value="Medicine" />
                            </FXCollections>
                        </items>
                    </ComboBox>
                </HBox>

                <!-- Time  -->
                <HBox spacing="10">
                    <Label text="Time:" style="-fx-font-size: 14px;" />

                    <!-- Hour -->
                    <TextField fx:id="scheduleHour" promptText="HH" maxWidth="50" style="-fx-font-size: 14px;" />
                    <Text text=":" />

                    <!-- Minute -->
                    <TextField fx:id="scheduleMin" promptText="MM" maxWidth="50" style="-fx-font-size: 14px;" />

                    <!-- AM/PM  -->
                    <ComboBox fx:id="amPmComboBox" maxWidth="70" style="-fx-font-size: 14px;">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="AM" />
                                <String fx:value="PM" />
                            </FXCollections>
                        </items>
                    </ComboBox>
                </HBox>

                <!-- Repeat -->
                <HBox spacing="10">
                    <Label text="Repeat:" style="-fx-font-size: 14px;" />
                    <CheckBox fx:id="repeatCheckBox" style="-fx-font-size: 14px;" />
                </HBox>

                <!-- Save and Cancel Buttons -->
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button text="Save" onAction="#handleSaveSchedule" style="-fx-background-color: #32cd32; -fx-text-fill: white;" />
                    <Button text="Cancel" onAction="#handleCancelSchedule" style="-fx-background-color: #ff6347; -fx-text-fill: white;" />
                </HBox>
            </VBox>
        </VBox>
    </right>

</BorderPane>