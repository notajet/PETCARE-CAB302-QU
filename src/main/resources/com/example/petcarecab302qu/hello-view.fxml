<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.petcarecab302qu.controller.HelloController"
            style="-fx-background-color: #f0f0f0;">
    <VBox alignment="TOP_LEFT" spacing="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
          style="-fx-background-color: white; -fx-padding: 20px; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-border-color: #dcdcdc; -fx-border-width: 1px;">
        <TextArea fx:id="termsAndConditions" editable="false" wrapText="true" prefHeight="300"
                  style="-fx-font-size: 14px;"/>
        <CheckBox fx:id="agreeCheckBox" text="I agree to the terms and conditions" style="-fx-font-size: 14px;"
                  onAction="#onAgreeCheckBoxClick"/>
        <HBox spacing="10.0">
            <Button text="Next" fx:id="nextButton" onAction="#onNextButtonClick" disable="true"
                    style="-fx-font-size: 14px; -fx-background-color: #1e90ff; -fx-text-fill: white;"/>
            <Button text="Back" onAction="#onBackButtonClick"
                    style="-fx-font-size: 14px; -fx-background-color: #ff6347; -fx-text-fill: white;"/>
        </HBox>
    </VBox>
</AnchorPane>
